// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                  String     @id @default(uuid())
  beanId              String
  name                String
  orderState          OrderState @default(PENDING)
  orderPlacedDateTime DateTime   @default(now())
}

enum OrderState {
  PENDING
  ACCEPTED
  COMPLETED
  CANCELLED
}

model BeanStock {
  id    String @id
  stock Int
}
